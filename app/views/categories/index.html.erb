<div class="container">
  <div class="row justify-content-center">
    <h1>Categories#index</h1>
    <p>Find me in app/views/categories/index.html.erb</p>

      <table>
        <thead>
          <tr>
            <td>Name</td>
            <td>Type</td>
            <td>Action</td>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.category_type %></td>
              <td><%= link_to "Edit", edit_category_path(category) %> or <%= link_to "Delete", category_path(category), data: { turbo_method: :delete } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <%= link_to "New category", new_category_path %>
 </div>
</div>
