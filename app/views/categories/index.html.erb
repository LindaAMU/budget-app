<div class="container">
  <div class="row justify-content-center">
    <h1 class="m-5">Your Categories</h1>
    <table>
      <thead>
        <tr>
          <td>Name</td>
          <td>Type</td>
          <td>Action</td>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= category.category_type %></td>
            <td><%= link_to edit_category_path(category) do %>
              <i class="fa-solid fa-pen-to-square text-light"></i>
            <% end %>
             | <%= link_to category_path(category), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
              <i class="fa-solid fa-trash text-light"></i>
             <% end %>
             </td>
          </tr>
        <% end %>
         <%= link_to new_account_path do %>
      <i class="fa-solid fa-circle-plus fa-3x" ></i>
    <% end %>
      </tbody>
    </table>
    <div class="row justify-content-center p-1">
      <div class="d-flex justify-content-center">
        <%= button_to "New category", new_category_path, class:"btn-violet", method: :get %>
      </div>
  </div>
</div>
