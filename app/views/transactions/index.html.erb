<div class="container">
  <div class="row justify-content-center">

    <h1>Transactions#index</h1>
    <p>Find me in app/views/transactions/index.html.erb</p>

    <table>
      <thead>
        <tr>
          <td>Reason</td>
          <td>Date</td>
          <td>Amount</td>
          <td>Account</td>
          <td>Category</td>
          <td>Action</td>
        </tr>
      </thead>
      <tbody>
        <% @transactions.each do |transaction| %>
          <tr>
            <td><%= transaction.reason %></td>
            <td><%= transaction.date %></td>
            <td><%= transaction.amount %></td>
            <td><%= transaction.account.account_type %></td>
            <td><%= transaction.category.category_type %></td>
            <td><%= link_to "Edit", edit_transaction_path(transaction) %> or <%= link_to "Delete", transaction_path(transaction), data: { turbo_method: :delete } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to "New transaction", new_transaction_path %>
  </div>
</div>
